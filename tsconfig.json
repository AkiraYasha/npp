{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "lib",
    "paths": {
      "@npp/*": ["*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "pretty": true
  },
  "include": ["src/**/*.ts", "@types/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
